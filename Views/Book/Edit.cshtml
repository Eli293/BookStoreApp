@model Book
@{
    ViewData["Title"] = "Edit Book Details";
}
<h1>Edit Book Details</h1>
<form asp-action="Edit" method="post">
    <input asp-for="BookId" type="hidden" />
    <input asp-for="ISBN" type="hidden" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title">
    </div>

    <button type="Submit" class="btn btn-primary"> Update </button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>